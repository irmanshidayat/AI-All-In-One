<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Streaming - HeyGen Avatar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/video-streaming.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('partials/sidebar') %>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Video Streaming</h1>
                </div>

                <!-- Video Streaming Interface -->
                <div class="video-streaming-container">
                    <!-- Avatar Selection -->
                    <div class="avatar-selection mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3>Selected Avatar: <span id="selectedAvatar">None</span></h3>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#avatarModal">
                                Select Avatar
                            </button>
                        </div>
                    </div>

                    <!-- Video Display -->
                    <div class="video-display mb-4">
                        <div class="ratio ratio-16x9">
                            <video id="videoPlayer" class="bg-dark" autoplay playsinline></video>
                        </div>
                    </div>

                    <!-- Controls -->
                    <div class="streaming-controls">
                        <div class="d-flex gap-2">
                            <button id="startStreaming" class="btn btn-success" disabled>Start Streaming</button>
                            <button id="stopStreaming" class="btn btn-danger" disabled>Stop Streaming</button>
                        </div>
                    </div>

                    <!-- Status Log -->
                    <div class="status-log mt-4">
                        <h4>Status Log</h4>
                        <div id="statusLog" class="border rounded p-3 bg-light" style="height: 200px; overflow-y: auto;">
                            <div class="text-muted">No status updates yet...</div>
                        </div>
                    </div>
                </div>

                <!-- Avatar Selection Modal -->
                <div class="modal fade" id="avatarModal" tabindex="-1">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Select Avatar</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="avatar-tabs mb-3">
                                    <button class="btn btn-outline-primary active" data-tab="all">All Avatars</button>
                                    <button class="btn btn-outline-primary" data-tab="male">Male</button>
                                    <button class="btn btn-outline-primary" data-tab="female">Female</button>
                                </div>
                                <div class="avatar-grid"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/video-streaming.js"></script>
</body>
</html> 